<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CSE3MASAssignment" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.CSE3MASAssignment" parent="Base.Theme.CSE3MASAssignment" />

    <!--Login Screen Size Heading-->
    <style name="Gigle_Heading_Big_Theme" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/nunito_sans_bold</item>
        <item name="android:textColor">@color/default_text_colour</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">96dp</item>
    </style>
    <!--Normal Size Heading-->
    <style name="Gigle_Heading_Theme" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/nunito_sans_semibold</item>
        <item name="android:textColor">@color/default_text_colour</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">32dp</item>
    </style>
    <!--Heading For Body Paragraph-->
    <style name="Gigle_Body_Heading_Theme" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/nunito_sans_semibold</item>
        <item name="android:textColor">@color/default_text_colour</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">24dp</item>
    </style>
    <!--Body Paragraph-->
    <style name="Gigle_Body_Theme" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/nunito_sans_semibold</item>
        <item name="android:textColor">@color/default_text_colour</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20dp</item>
    </style>

    <!--Default Button Theme-->
    <style name="Gigle_Btn_Theme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/button_background</item>
        <item name="colorPrimaryVariant">@color/button_background</item>
        <item name="colorOnPrimary">@color/button_text</item>
        <item name="fontFamily">@font/nunito_sans_bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">32dp</item>
        <item name="android:textAlignment">center</item>
        <item name="colorSecondary">@color/button_text</item>
        <item name="colorSecondaryVariant">@color/button_text</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

    </style>
</resources>